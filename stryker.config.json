{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "command",
  "commandRunner": {
    "command": "tsx --test tests/*.test.mjs && npx vitest run --reporter=dot"
  },
  "mutate": ["src/lib/utils/*.ts", "!src/lib/utils/qrcode.ts", "src/lib/api/hetzner.ts", "src/lib/stores/*.svelte.ts"],
  "coverageAnalysis": "off",
  "concurrency": 8,
  "timeoutMS": 60000,
  "thresholds": { "high": 90, "low": 80, "break": 80 },
  "reporters": ["clear-text", "html"],
  "htmlReporter": { "fileName": "reports/mutation/index.html" }
}
