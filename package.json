{
  "name": "devbox",
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "pnpm check:format && pnpm check:lint && pnpm check:css && pnpm check:types && pnpm check:spell && pnpm check:knip && pnpm check:cpd && pnpm check:coverage",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:css": "stylelint 'src/**/*.css' 'src/**/*.svelte'",
    "check:types": "svelte-check --tsconfig ./tsconfig.json",
    "check:spell": "cspell '**/*.{ts,svelte,js,mjs,md,css}' --no-progress",
    "check:knip": "knip",
    "check:cpd": "jscpd src/",
    "fix": "eslint . --fix && prettier --write .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "check:coverage": "vitest run --coverage",
    "test": "vitest run",
    "test:vitest": "vitest run",
    "test:mutation": "stryker run",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "playwright": "^1.58.0",
    "unique-names-generator": "^4.7.1",
    "uqr": "^0.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/vite": "^4.1.0",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^2.1.9",
    "cspell": "^9.6.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-perfectionist": "^5.5.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^3.15.0",
    "eslint-plugin-unicorn": "^63.0.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.1",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "lefthook": "^2.1.1",
    "marked": "^17.0.1",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "yaml": "^2.8.2"
  }
}
